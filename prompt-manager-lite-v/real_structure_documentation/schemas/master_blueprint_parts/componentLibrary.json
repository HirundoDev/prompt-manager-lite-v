{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-componentLibrary.md",
    "title": "Component Library",
    "description": "(Generated by UI/UX Designer) A comprehensive inventory of all UI components used in the application.",
    "type": "object",
    "properties": {
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string", "description": "Identificador Ãºnico estable del componente" },
                    "slug": { "type": "string", "description": "Alias legible/slug para referencia externa" },
                    "name": { "type": "string" },
                    "status": { "type": "string", "enum": ["Design", "Development", "Ready", "Deprecated"] },
                    "description": { "type": "string" },
                    "propsSchema": { "type": "object", "description": "A JSON schema describing the component's properties." },
                    "emittedEvents": { "type": "array", "items": { "type": "string" } },
                    "props": {
                        "type": "array",
                        "items": { 
                            "type": "object", 
                            "properties": { 
                                "name": { "type": "string" }, 
                                "type": { "type": "string" }, 
                                "required": { "type": "boolean" }, 
                                "default": {}, 
                                "description": { "type": "string" } 
                            } 
                        }
                    },
                    "events": {
                        "type": "array",
                        "items": { 
                            "type": "object", 
                            "properties": { 
                                "name": { "type": "string" }, 
                                "payloadSchema": { "type": "object" }, 
                                "description": { "type": "string" } 
                            } 
                        }
                    },
                    "slots": {
                        "type": "array",
                        "items": { 
                            "type": "object", 
                            "properties": { 
                                "name": { "type": "string" }, 
                                "description": { "type": "string" } 
                            } 
                        }
                    },
                    "accessibility": { 
                        "type": "object", 
                        "properties": { 
                            "ariaRoles": { "type": "array", "items": { "type": "string" } }, 
                            "keyboardNav": { "type": "string" }, 
                            "contrast": { "type": "string" } 
                        } 
                    },
                    "examples": { 
                        "type": "array", 
                        "items": { 
                            "type": "object", 
                            "properties": { 
                                "title": { "type": "string" }, 
                                "code": { "type": "string" }, 
                                "screenshot": { "type": "string" } 
                            } 
                        } 
                    },
                    "codeRefs": { "type": "array", "items": { "type": "string" } },
                    "version": { "type": "string" },
                    "tags": { "type": "array", "items": { "type": "string" } },
                    "dependencies": { "type": "array", "items": { "type": "string" } },
                    "deprecations": { "type": "object", "properties": { "replacedBy": { "type": "string" }, "since": { "type": "string" } } },
                    "usageGuidelines": { "type": "string" }
                }
            }
        },
        "theming": {
            "type": "object",
            "properties": {
                "tokens": { 
                    "type": "array", 
                    "items": { 
                        "type": "object", 
                        "properties": { 
                            "name": { "type": "string" }, 
                            "type": { "type": "string", "enum": ["color", "space", "radius", "font"] }, 
                            "description": { "type": "string" } 
                        } 
                    } 
                },
                "variants": { 
                    "type": "array", 
                    "items": { 
                        "type": "object", 
                        "properties": { 
                            "name": { "type": "string" }, 
                            "appliesTo": { "type": "array", "items": { "type": "string" } }, 
                            "tokens": { "type": "array", "items": { "type": "string" } } 
                        } 
                    } 
                }
            }
        },
        "repository": { "type": "string", "description": "URL or path to the component library repository" },
        "workflows": { "type": "array", "items": { "type": "string" }, "description": "CI/CD workflows related to components" },
        "contributionGuidelines": { "type": "string", "description": "How to add/update components" }
    }
}