{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-testingStrategy.md",
    "title": "Testing Strategy",
    "description": "(Generated by QA Engineer) The comprehensive strategy for ensuring software quality, including all levels of testing.",
    "type": "object",
    "properties": {
        "testingLevels": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "level": { "type": "string", "enum": ["Unit", "Integration", "End-to-End", "Performance", "Security"] },
                    "framework": { "type": "string", "description": "The primary framework or tool used for this level of testing." },
                    "coverageTarget": { "type": "string", "description": "The target code coverage percentage for this level." }
                }
            }
        },
        "testEnvironments": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string", "description": "e.g., 'Local', 'CI', 'Staging'" },
                    "description": { "type": "string", "description": "The purpose and configuration of this test environment." }
                }
            }
        },
        "pyramid": {
            "type": "object",
            "properties": {
                "unit": { "type": ["integer", "number"] },
                "integration": { "type": ["integer", "number"] },
                "e2e": { "type": ["integer", "number"] }
            }
        },
        "types": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "scope": { "type": "string" },
                    "tools": { "type": "array", "items": { "type": "string" } },
                    "owner": { "type": "string" }
                }
            }
        },
        "coverageTargets": {
            "type": "object",
            "properties": {
                "lines": { "type": ["integer", "number"] },
                "branches": { "type": ["integer", "number"] },
                "criticalPaths": { "type": ["integer", "number"] }
            }
        },
        "testData": {
            "type": "object",
            "properties": {
                "strategy": { "type": "string", "enum": ["synthetic", "masked", "mixed"] },
                "generators": { "type": "array", "items": { "type": "string" } }
            }
        },
        "environments": {
            "type": "object",
            "properties": {
                "staging": { "type": "string" },
                "prodLike": { "type": "string" }
            }
        }
    }
}