{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.promptmanager.dev/quality-goals/v3.0.0",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-qualityGoals.md",
    "title": "Universal Quality Goals Schema Template",
    "description": "Universal template for documenting quality goals and objectives that works across any industry, methodology, or quality framework. This schema provides a structured approach to quality goals documentation using placeholders that can be adapted to ISO 9001, Six Sigma, TQM, software quality, manufacturing quality, or any other quality management approach. Follows modern quality management practices and standards for 2025.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "qualityInfo",
        "objectives",
        "metrics",
        "processes"
    ],
    "properties": {
        "qualityInfo": {
            "type": "object",
            "description": "Basic quality goals information and metadata",
            "required": [
                "frameworkName",
                "version",
                "description",
                "qualityApproach"
            ],
            "additionalProperties": false,
            "properties": {
                "frameworkName": {
                    "type": "string",
                    "description": "Quality framework name - use placeholder [FRAMEWORK_NAME]",
                    "examples": [
                        "[FRAMEWORK_NAME]",
                        "[ORGANIZATION_NAME] Quality Goals",
                        "[PROJECT_NAME] Quality Framework"
                    ]
                },
                "version": {
                    "type": "string",
                    "description": "Framework version - use placeholder [FRAMEWORK_VERSION]",
                    "examples": [
                        "[FRAMEWORK_VERSION]",
                        "[MAJOR].[MINOR].[PATCH]"
                    ]
                },
                "description": {
                    "type": "string",
                    "description": "Framework description - use placeholder [FRAMEWORK_DESCRIPTION]",
                    "examples": [
                        "[FRAMEWORK_DESCRIPTION]",
                        "Quality goals for [PROJECT_PURPOSE]"
                    ]
                },
                "qualityApproach": {
                    "type": "string",
                    "description": "Quality approach - use placeholder [QUALITY_APPROACH]",
                    "examples": [
                        "[QUALITY_APPROACH]",
                        "ISO 9001",
                        "Six Sigma",
                        "TQM",
                        "Lean Quality",
                        "Agile Quality",
                        "[CUSTOM_APPROACH]"
                    ]
                }
            }
        }
    }
}