{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.promptmanager.dev/design-system/v3.0.0",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-designSystem.md",
    "title": "Universal Design System Schema Template",
    "description": "Universal template for documenting design systems that works across any technology stack, design methodology, or platform. This schema provides a structured approach to design system documentation using placeholders that can be adapted to web design systems, mobile design systems, multi-platform systems, or any other design system approach. Follows modern design system practices and documentation standards for 2025.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "systemInfo",
        "designTokens",
        "components",
        "guidelines"
    ],
    "properties": {
        "systemInfo": {
            "type": "object",
            "description": "Basic design system information and metadata",
            "required": [
                "systemName",
                "version",
                "description",
                "scope"
            ],
            "additionalProperties": false,
            "properties": {
                "systemName": {
                    "type": "string",
                    "description": "Design system name - use placeholder [SYSTEM_NAME]",
                    "examples": [
                        "[SYSTEM_NAME]",
                        "[BRAND_NAME] Design System",
                        "[ORGANIZATION_NAME] UI Library"
                    ]
                },
                "version": {
                    "type": "string",
                    "description": "System version - use placeholder [SYSTEM_VERSION]",
                    "examples": [
                        "[SYSTEM_VERSION]",
                        "[MAJOR].[MINOR].[PATCH]"
                    ]
                },
                "description": {
                    "type": "string",
                    "description": "System description - use placeholder [SYSTEM_DESCRIPTION]",
                    "examples": [
                        "[SYSTEM_DESCRIPTION]",
                        "Design system for [PROJECT_PURPOSE]"
                    ]
                },
                "scope": {
                    "type": "string",
                    "description": "System scope - use placeholder [SYSTEM_SCOPE]",
                    "examples": [
                        "[SYSTEM_SCOPE]",
                        "Web Applications",
                        "Mobile Apps",
                        "Multi-Platform",
                        "[CUSTOM_SCOPE]"
                    ]
                }
            }
        }
    }
}