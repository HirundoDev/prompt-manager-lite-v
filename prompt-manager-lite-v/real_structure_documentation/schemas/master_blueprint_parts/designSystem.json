{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-designSystem.md",
    "title": "Design System",
    "description": "(Generated by UI/UX Designer) The foundational rules and guidelines for the application's visual design.",
    "type": "object",
    "properties": {
        "colorPalette": {
            "type": "object",
            "properties": {
                "primary": { "type": "string" },
                "secondary": { "type": "string" },
                "accent": { "type": "string" },
                "neutral": { "type": "string" }
            }
        },
        "typography": {
            "type": "object",
            "properties": {
                "fontFamily": { "type": "string" },
                "baseSize": { "type": "string" },
                "scaleRatio": { "type": "number" }
            }
        },
        "spacingSystem": {
            "type": "object",
            "properties": {
                "baseUnit": { "type": "string" },
                "scale": { "type": "array", "items": { "type": "string" } }
            }
        },
        "tokens": {
            "type": "object",
            "properties": {
                "color": {
                    "type": "array",
                    "items": { "type": "object", "properties": { "name": { "type": "string" }, "value": { "type": "string" }, "contrastPairs": { "type": "array", "items": { "type": "string" } } } }
                },
                "typography": {
                    "type": "array",
                    "items": { "type": "object", "properties": { "name": { "type": "string" }, "fontFamily": { "type": "string" }, "size": { "type": "number" }, "lineHeight": { "type": "number" }, "weight": { "type": "number" } } }
                },
                "space": {
                    "type": "array",
                    "items": { "type": "object", "properties": { "name": { "type": "string" }, "value": { "type": ["number", "string"] } } }
                },
                "radius": {
                    "type": "array",
                    "items": { "type": "object", "properties": { "name": { "type": "string" }, "value": { "type": ["number", "string"] } } }
                },
                "shadow": {
                    "type": "array",
                    "items": { "type": "object", "properties": { "name": { "type": "string" }, "value": { "type": "string" } } }
                }
            }
        },
        "guidelines": {
            "type": "object",
            "properties": {
                "accessibility": { "type": "string" },
                "motion": { "type": "string" },
                "layout": { "type": "string" },
                "content": { "type": "string" }
            }
        },
        "foundations": {
            "type": "object",
            "properties": {
                "grid": { "type": "number" },
                "breakpoints": { "type": "array", "items": { "type": ["number", "integer"] } }
            }
        },
        "componentsBase": {
            "type": "array",
            "items": { "type": "object", "properties": { "name": { "type": "string" }, "description": { "type": "string" }, "a11yNotes": { "type": "string" } } }
        }
    }
}