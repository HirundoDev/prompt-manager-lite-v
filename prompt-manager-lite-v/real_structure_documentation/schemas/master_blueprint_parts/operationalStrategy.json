{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.promptmanager.dev/operational-strategy/v3.0.0",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-operationalStrategy.md",
    "title": "Universal Operational Strategy Schema Template",
    "description": "Universal template for documenting operational strategies that works across any organization type, industry, or operational model. This schema provides a structured approach to operational strategy documentation using placeholders that can be adapted to IT operations, business operations, manufacturing, services, or any other operational domain. Follows modern operations management practices and frameworks for 2025.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "strategyInfo",
        "operationalModel",
        "processes",
        "monitoring"
    ],
    "properties": {
        "strategyInfo": {
            "type": "object",
            "description": "Basic operational strategy information and metadata",
            "required": [
                "strategyName",
                "version",
                "description",
                "operationalDomain"
            ],
            "additionalProperties": false,
            "properties": {
                "strategyName": {
                    "type": "string",
                    "description": "Operational strategy name - use placeholder [STRATEGY_NAME]",
                    "examples": [
                        "[STRATEGY_NAME]",
                        "[ORGANIZATION_NAME] Operational Strategy",
                        "[DEPARTMENT_NAME] Operations Plan"
                    ]
                },
                "version": {
                    "type": "string",
                    "description": "Strategy version - use placeholder [STRATEGY_VERSION]",
                    "examples": [
                        "[STRATEGY_VERSION]",
                        "[MAJOR].[MINOR].[PATCH]"
                    ]
                },
                "description": {
                    "type": "string",
                    "description": "Strategy description - use placeholder [STRATEGY_DESCRIPTION]",
                    "examples": [
                        "[STRATEGY_DESCRIPTION]",
                        "Operational strategy for [BUSINESS_AREA]"
                    ]
                },
                "operationalDomain": {
                    "type": "string",
                    "description": "Operational domain - use placeholder [OPERATIONAL_DOMAIN]",
                    "examples": [
                        "[OPERATIONAL_DOMAIN]",
                        "IT Operations",
                        "Business Operations",
                        "Manufacturing",
                        "Service Delivery",
                        "[CUSTOM_DOMAIN]"
                    ]
                }
            }
        }
    }
}
},
"operationalModel": {
"type": "object",
"description": "Operational model using placeholders",
"required": [
    "approach",
    "structure"
],
"properties": {
    "approach": {
        "type": "string",
        "description": "Operational approach - use placeholder [OPERATIONAL_APPROACH]",
        "examples": [
            "[OPERATIONAL_APPROACH]",
            "Centralized",
            "Decentralized",
            "Hybrid",
            "Federated",
            "[CUSTOM_APPROACH]"
        ]
    },
    "structure": {
        "type": "object",
        "description": "Organizational structure using placeholders",
        "properties": {
            "organizationModel": {
                "type": "string",
                "examples": [
                    "[ORGANIZATION_MODEL]",
                    "Functional",
                    "Divisional",
                    "Matrix",
                    "Network",
                    "[CUSTOM_MODEL]"
                ]
            },
            "teams": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "teamName": {
                            "type": "string",
                            "examples": [
                                "[TEAM_NAME]",
                                "[OPERATIONAL_TEAM]"
                            ]
                        },
                        "responsibilities": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": [
                                    "[TEAM_RESPONSIBILITY]",
                                    "[OPERATIONAL_DUTY]"
                                ]
                            }
                        },
                        "skills": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": [
                                    "[REQUIRED_SKILL]",
                                    "[TEAM_COMPETENCY]"
                                ]
                            }
                        }
                    }
                }
            },
            "roles": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "roleName": {
                            "type": "string",
                            "examples": [
                                "[ROLE_NAME]",
                                "[OPERATIONAL_ROLE]"
                            ]
                        },
                        "description": {
                            "type": "string",
                            "examples": [
                                "[ROLE_DESCRIPTION]",
                                "[ROLE_PURPOSE]"
                            ]
                        },
                        "responsibilities": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": [
                                    "[ROLE_RESPONSIBILITY]",
                                    "[DUTY_DESCRIPTION]"
                                ]
                            }
                        }
                    }
                }
            }
        }
    },
    "serviceModel": {
        "type": "object",
        "description": "Service delivery model using placeholders",
        "properties": {
            "deliveryModel": {
                "type": "string",
                "examples": [
                    "[DELIVERY_MODEL]",
                    "Internal",
                    "Outsourced",
                    "Hybrid",
                    "Shared Services",
                    "[CUSTOM_MODEL]"
                ]
            },
            "services": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "serviceName": {
                            "type": "string",
                            "examples": [
                                "[SERVICE_NAME]",
                                "[OPERATIONAL_SERVICE]"
                            ]
                        },
                        "description": {
                            "type": "string",
                            "examples": [
                                "[SERVICE_DESCRIPTION]",
                                "[SERVICE_PURPOSE]"
                            ]
                        },
                        "serviceLevel": {
                            "type": "object",
                            "properties": {
                                "availability": {
                                    "type": "string",
                                    "examples": [
                                        "[AVAILABILITY_TARGET]",
                                        "[UPTIME_REQUIREMENT]"
                                    ]
                                },
                                "responseTime": {
                                    "type": "string",
                                    "examples": [
                                        "[RESPONSE_TIME_TARGET]",
                                        "[SLA_RESPONSE]"
                                    ]
                                },
                                "throughput": {
                                    "type": "string",
                                    "examples": [
                                        "[THROUGHPUT_TARGET]",
                                        "[CAPACITY_REQUIREMENT]"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
},
"processes": {
"type": "array",
"description": "Operational processes using placeholders",
"minItems": 1,
"items": {
    "type": "object",
    "required": [
        "processName",
        "description",
        "activities"
    ],
    "properties": {
        "processName": {
            "type": "string",
            "description": "Process name - use placeholder [PROCESS_NAME]",
            "examples": [
                "[PROCESS_NAME]",
                "[OPERATIONAL_PROCESS]"
            ]
        },
        "description": {
            "type": "string",
            "description": "Process description - use placeholder [PROCESS_DESCRIPTION]",
            "examples": [
                "[PROCESS_DESCRIPTION]",
                "[PROCESS_PURPOSE]"
            ]
        },
        "category": {
            "type": "string",
            "description": "Process category - use placeholder [PROCESS_CATEGORY]",
            "examples": [
                "[PROCESS_CATEGORY]",
                "Core",
                "Support",
                "Management",
                "[CUSTOM_CATEGORY]"
            ]
        },
        "owner": {
            "type": "string",
            "description": "Process owner - use placeholder [PROCESS_OWNER]",
            "examples": [
                "[PROCESS_OWNER]",
                "[RESPONSIBLE_ROLE]"
            ]
        },
        "activities": {
            "type": "array",
            "description": "Process activities using placeholders",
            "items": {
                "type": "object",
                "properties": {
                    "activityName": {
                        "type": "string",
                        "examples": [
                            "[ACTIVITY_NAME]",
                            "[PROCESS_STEP]"
                        ]
                    },
                    "description": {
                        "type": "string",
                        "examples": [
                            "[ACTIVITY_DESCRIPTION]",
                            "[STEP_PURPOSE]"
                        ]
                    },
                    "inputs": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "examples": [
                                "[ACTIVITY_INPUT]",
                                "[INPUT_RESOURCE]"
                            ]
                        }
                    },
                    "outputs": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "examples": [
                                "[ACTIVITY_OUTPUT]",
                                "[OUTPUT_DELIVERABLE]"
                            ]
                        }
                    },
                    "tools": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "examples": [
                                "[ACTIVITY_TOOL]",
                                "[SUPPORTING_SYSTEM]"
                            ]
                        }
                    }
                }
            }
        },
        "metrics": {
            "type": "array",
            "description": "Process metrics using placeholders",
            "items": {
                "type": "object",
                "properties": {
                    "metricName": {
                        "type": "string",
                        "examples": [
                            "[METRIC_NAME]",
                            "[KPI_NAME]"
                        ]
                    },
                    "target": {
                        "type": "string",
                        "examples": [
                            "[METRIC_TARGET]",
                            "[PERFORMANCE_GOAL]"
                        ]
                    },
                    "frequency": {
                        "type": "string",
                        "examples": [
                            "[MEASUREMENT_FREQUENCY]",
                            "[TRACKING_SCHEDULE]"
                        ]
                    }
                }
            }
        }
    }
}
},
