{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-visualBlueprint.md",
    "title": "Visual Blueprint",
    "description": "(Generated by UI/UX Designer) A collection of wireframes or mockups that define the application's user interface.",
    "type": "object",
    "properties": {
        "figmaRef": { "type": "string" },
        "prototypeLinks": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "screens": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "screenName": { "type": "string" },
                    "description": { "type": "string" },
                    "image_url": { "type": "string", "format": "uri" },
                    "link_to_prototype": { "type": "string", "format": "uri" }
                }
            }
        },
        "pages": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "title": { "type": "string" },
                    "route": { "type": "string" },
                    "layout": { "type": "string" },
                    "components": { "type": "array", "items": { "type": "string" } },
                    "componentRefs": { "type": "array", "items": { "type": "string" }, "description": "IDs/nombres que deben existir en componentLibrary.components[].name" }
                }
            }
        },
        "layouts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "regions": { "type": "array", "items": { "type": "string" } }
                }
            }
        },
        "navigation": {
            "type": "object",
            "properties": {
                "menuItems": { "type": "array", "items": { "type": "string" } }
            }
        },
        "states": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pageId": { "type": "string" },
                    "stateId": { "type": "string" },
                    "description": { "type": "string" },
                    "wireframeRef": { "type": "string" }
                }
            }
        },
        "assets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": { "type": "string", "description": "image|icon|illustration|video|component" },
                    "uri": { "type": "string" },
                    "description": { "type": "string" }
                }
            }
        },
        "breakpoints": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "width": { "type": ["integer", "number"] }
                }
            }
        },
        "themes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "tokensRef": { "type": "string" }
                }
            }
        },
        "annotations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "target": { "type": "string", "description": "screenName|pageId|componentId" },
                    "note": { "type": "string" },
                    "severity": { "type": "string", "enum": ["info", "warning", "critical"] }
                }
            }
        }
    }
}