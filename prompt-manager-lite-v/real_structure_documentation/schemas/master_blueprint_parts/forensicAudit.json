{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.promptmanager.dev/forensic-audit/v3.0.0",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-forensicAudit.md",
    "title": "Universal Forensic Audit Schema Template",
    "description": "Universal template for documenting forensic audits and investigations that works across any domain, technology, or investigation type. This schema provides a structured approach to forensic audit documentation using placeholders that can be adapted to financial forensics, digital forensics, cybersecurity investigations, compliance audits, or any other forensic examination. Follows modern forensic investigation practices and audit standards for 2025.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "auditInfo",
        "investigation",
        "evidence",
        "findings"
    ],
    "properties": {
        "auditInfo": {
            "type": "object",
            "description": "Basic forensic audit information and metadata",
            "required": [
                "auditId",
                "auditName",
                "description",
                "auditType"
            ],
            "additionalProperties": false,
            "properties": {
                "auditId": {
                    "type": "string",
                    "description": "Audit identifier - use placeholder [AUDIT_ID]",
                    "examples": [
                        "[AUDIT_ID]",
                        "[INVESTIGATION_ID]",
                        "[CASE_NUMBER]"
                    ]
                },
                "auditName": {
                    "type": "string",
                    "description": "Audit name - use placeholder [AUDIT_NAME]",
                    "examples": [
                        "[AUDIT_NAME]",
                        "[INVESTIGATION_TITLE]",
                        "[CASE_NAME]"
                    ]
                },
                "description": {
                    "type": "string",
                    "description": "Audit description - use placeholder [AUDIT_DESCRIPTION]",
                    "examples": [
                        "[AUDIT_DESCRIPTION]",
                        "Forensic investigation of [SUBJECT_MATTER]"
                    ]
                },
                "auditType": {
                    "type": "string",
                    "description": "Audit type - use placeholder [AUDIT_TYPE]",
                    "examples": [
                        "[AUDIT_TYPE]",
                        "Financial Forensics",
                        "Digital Forensics",
                        "Cybersecurity Investigation",
                        "Compliance Audit",
                        "[CUSTOM_AUDIT_TYPE]"
                    ]
                }
            }
        }
    }
}