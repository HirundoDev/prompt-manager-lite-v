            },
            "authorities": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "decisionType": {
                            "type": "string",
                            "examples": [
                                "[DECISION_TYPE]",
                                "[DECISION_CATEGORY]"
