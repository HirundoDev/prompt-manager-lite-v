{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.promptmanager.dev/project-management/v3.0.0",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-projectManagement.md",
    "title": "Universal Project Management Schema Template",
    "description": "Universal template for documenting project management approaches that works across any methodology, framework, or project type. This schema provides a structured approach to project management documentation using placeholders that can be adapted to Agile, Waterfall, Hybrid, Lean, or any other project management methodology. Follows modern project management practices and frameworks for 2025.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "managementInfo",
        "methodology",
        "governance",
        "processes"
    ],
    "properties": {
        "managementInfo": {
            "type": "object",
            "description": "Basic project management information and metadata",
            "required": [
                "frameworkName",
                "version",
                "description",
                "methodology"
            ],
            "additionalProperties": false,
            "properties": {
                "frameworkName": {
                    "type": "string",
                    "description": "Project management framework name - use placeholder [FRAMEWORK_NAME]",
                    "examples": [
                        "[FRAMEWORK_NAME]",
                        "[PROJECT_NAME] Management Framework",
                        "[ORGANIZATION_NAME] PM Approach"
                    ]
                },
                "version": {
                    "type": "string",
                    "description": "Framework version - use placeholder [FRAMEWORK_VERSION]",
                    "examples": [
                        "[FRAMEWORK_VERSION]",
                        "[MAJOR].[MINOR].[PATCH]"
                    ]
                },
                "description": {
                    "type": "string",
                    "description": "Framework description - use placeholder [FRAMEWORK_DESCRIPTION]",
                    "examples": [
                        "[FRAMEWORK_DESCRIPTION]",
                        "Project management approach for [PROJECT_TYPE]"
                    ]
                },
                "methodology": {
                    "type": "string",
                    "description": "Primary methodology - use placeholder [PRIMARY_METHODOLOGY]",
                    "examples": [
                        "[PRIMARY_METHODOLOGY]",
                        "Agile",
                        "Waterfall",
                        "Hybrid",
                        "Lean",
                        "Scrum",
                        "Kanban",
                        "[CUSTOM_METHODOLOGY]"
                    ]
                }
            }
        }
    }
}
},
"methodology": {
"type": "object",
"description": "Methodology configuration using placeholders",
"required": [
    "approach",
    "principles"
],
"properties": {
    "approach": {
        "type": "string",
        "description": "Management approach - use placeholder [MANAGEMENT_APPROACH]",
        "examples": [
            "[MANAGEMENT_APPROACH]",
            "Iterative",
            "Sequential",
            "Adaptive",
            "Predictive",
            "[CUSTOM_APPROACH]"
        ]
    },
    "principles": {
        "type": "array",
        "description": "Core principles using placeholders",
        "items": {
            "type": "string",
            "examples": [
                "[CORE_PRINCIPLE]",
                "[GUIDING_PRINCIPLE]"
            ]
        }
    },
    "framework": {
        "type": "object",
        "description": "Framework details using placeholders",
        "properties": {
            "type": {
                "type": "string",
                "examples": [
                    "[FRAMEWORK_TYPE]",
                    "Scrum",
                    "Kanban",
                    "SAFe",
                    "PRINCE2",
                    "PMBOK",
                    "[CUSTOM_FRAMEWORK]"
                ]
            },
            "version": {
                "type": "string",
                "examples": [
                    "[FRAMEWORK_VERSION]",
                    "[STANDARD_VERSION]"
                ]
            },
            "adaptations": {
                "type": "array",
                "items": {
                    "type": "string",
                    "examples": [
                        "[FRAMEWORK_ADAPTATION]",
                        "[CUSTOMIZATION]"
                    ]
                }
            }
        }
    },
    "lifecycle": {
        "type": "object",
        "description": "Project lifecycle using placeholders",
        "properties": {
            "model": {
                "type": "string",
                "examples": [
                    "[LIFECYCLE_MODEL]",
                    "Iterative",
                    "Incremental",
                    "Spiral",
                    "V-Model",
                    "[CUSTOM_MODEL]"
                ]
            },
            "phases": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "phaseName": {
                            "type": "string",
                            "examples": [
                                "[PHASE_NAME]",
                                "Initiation",
                                "Planning",
                                "Execution",
                                "Monitoring",
                                "Closure",
                                "[CUSTOM_PHASE]"
                            ]
                        },
                        "description": {
                            "type": "string",
                            "examples": [
                                "[PHASE_DESCRIPTION]",
                                "[PHASE_PURPOSE]"
                            ]
                        },
                        "deliverables": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": [
                                    "[PHASE_DELIVERABLE]",
                                    "[PHASE_OUTPUT]"
                                ]
                            }
                        },
                        "gates": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "gateName": {
                                        "type": "string",
                                        "examples": [
                                            "[GATE_NAME]",
                                            "[CHECKPOINT_NAME]"
                                        ]
                                    },
                                    "criteria": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "examples": [
                                                "[GATE_CRITERION]",
                                                "[APPROVAL_REQUIREMENT]"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
