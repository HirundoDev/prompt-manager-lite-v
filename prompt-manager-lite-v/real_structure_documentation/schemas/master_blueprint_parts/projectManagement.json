                        },
                        "authority": {
                            "type": "string",
                            "examples": [
                                "[DECISION_AUTHORITY]",
                                "[DECISION_MAKER]"
                            ]
                        },
                        "process": {
                            "type": "string",
                            "examples": [
                                "[DECISION_PROCESS]",
                                "[APPROVAL_WORKFLOW]"
                            ]
                        },
                        "escalation": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": [
                                    "[ESCALATION_LEVEL]",
                                    "[ESCALATION_CONTACT]"
