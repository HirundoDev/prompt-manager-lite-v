{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.promptmanager.dev/soc2-compliance/v3.0.0",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-soc2Compliance.md",
    "title": "Universal SOC 2 Compliance Schema Template",
    "description": "Universal template for documenting SOC 2 compliance and security frameworks that works across any organization type, technology stack, or compliance requirement. This schema provides a structured approach to compliance documentation using placeholders that can be adapted to SOC 2, ISO 27001, PCI DSS, HIPAA, or any other security compliance framework. Follows modern security compliance practices and audit requirements for 2025.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "complianceInfo",
        "trustServicesCriteria",
        "controls",
        "documentation"
    ],
    "properties": {
        "complianceInfo": {
            "type": "object",
            "description": "Basic compliance information and metadata",
            "required": [
                "frameworkName",
                "version",
                "description",
                "scope"
            ],
            "additionalProperties": false,
            "properties": {
                "frameworkName": {
                    "type": "string",
                    "description": "Compliance framework name - use placeholder [FRAMEWORK_NAME]",
                    "examples": [
                        "[FRAMEWORK_NAME]",
                        "SOC 2",
                        "ISO 27001",
                        "PCI DSS",
                        "HIPAA",
                        "[CUSTOM_FRAMEWORK]"
                    ]
                },
                "version": {
                    "type": "string",
                    "description": "Framework version - use placeholder [FRAMEWORK_VERSION]",
                    "examples": [
                        "[FRAMEWORK_VERSION]",
                        "[COMPLIANCE_VERSION]"
                    ]
                },
                "description": {
                    "type": "string",
                    "description": "Framework description - use placeholder [FRAMEWORK_DESCRIPTION]",
                    "examples": [
                        "[FRAMEWORK_DESCRIPTION]",
                        "Compliance framework for [ORGANIZATION_NAME]"
                    ]
                },
                "scope": {
                    "type": "string",
                    "description": "Compliance scope - use placeholder [COMPLIANCE_SCOPE]",
                    "examples": [
                        "[COMPLIANCE_SCOPE]",
                        "[AUDIT_SCOPE]"
                    ]
                }
            }
        }
    }
}
},
"trustServicesCriteria": {
"type": "array",
"description": "Trust services criteria using placeholders",
"minItems": 1,
"items": {
    "type": "object",
    "required": [
        "criteriaName",
        "description",
        "controls"
    ],
    "properties": {
        "criteriaName": {
            "type": "string",
            "description": "Criteria name - use placeholder [CRITERIA_NAME]",
            "examples": [
                "[CRITERIA_NAME]",
                "Security",
                "Availability",
                "Processing Integrity",
                "Confidentiality",
                "Privacy",
                "[CUSTOM_CRITERIA]"
            ]
        },
        "description": {
            "type": "string",
            "description": "Criteria description - use placeholder [CRITERIA_DESCRIPTION]",
            "examples": [
                "[CRITERIA_DESCRIPTION]",
                "[CRITERIA_PURPOSE]"
            ]
        },
        "applicability": {
            "type": "string",
            "description": "Criteria applicability - use placeholder [CRITERIA_APPLICABILITY]",
            "examples": [
                "[CRITERIA_APPLICABILITY]",
                "Applicable",
                "Not Applicable",
                "[CUSTOM_APPLICABILITY]"
            ]
        },
        "controls": {
            "type": "array",
            "description": "Controls for this criteria using placeholders",
            "items": {
                "type": "object",
                "properties": {
                    "controlId": {
                        "type": "string",
                        "examples": [
                            "[CONTROL_ID]",
                            "[CONTROL_REFERENCE]"
                        ]
                    },
                    "controlName": {
                        "type": "string",
                        "examples": [
                            "[CONTROL_NAME]",
                            "[CONTROL_TITLE]"
                        ]
                    },
                    "description": {
                        "type": "string",
                        "examples": [
                            "[CONTROL_DESCRIPTION]",
                            "[CONTROL_PURPOSE]"
                        ]
                    },
                    "controlType": {
                        "type": "string",
                        "examples": [
                            "[CONTROL_TYPE]",
                            "Preventive",
                            "Detective",
                            "Corrective",
                            "[CUSTOM_TYPE]"
                        ]
                    },
                    "frequency": {
                        "type": "string",
                        "examples": [
                            "[CONTROL_FREQUENCY]",
                            "Continuous",
                            "Daily",
                            "Weekly",
                            "Monthly",
                            "[CUSTOM_FREQUENCY]"
                        ]
                    }
                }
            }
        }
    }
}
},
"controls": {
"type": "array",
"description": "Detailed controls using placeholders",
"minItems": 1,
"items": {
    "type": "object",
    "required": [
        "controlId",
        "controlName",
        "description",
        "implementation"
    ],
    "properties": {
        "controlId": {
            "type": "string",
            "description": "Control identifier - use placeholder [CONTROL_ID]",
            "examples": [
                "[CONTROL_ID]",
                "[CONTROL_REFERENCE]"
            ]
        },
        "controlName": {
            "type": "string",
            "description": "Control name - use placeholder [CONTROL_NAME]",
            "examples": [
                "[CONTROL_NAME]",
                "[CONTROL_TITLE]"
            ]
        },
        "description": {
            "type": "string",
            "description": "Control description - use placeholder [CONTROL_DESCRIPTION]",
            "examples": [
                "[CONTROL_DESCRIPTION]",
                "[CONTROL_PURPOSE]"
            ]
        },
        "category": {
            "type": "string",
            "description": "Control category - use placeholder [CONTROL_CATEGORY]",
            "examples": [
                "[CONTROL_CATEGORY]",
                "Access Control",
                "Data Protection",
                "System Operations",
                "[CUSTOM_CATEGORY]"
            ]
        },
        "riskLevel": {
            "type": "string",
            "description": "Risk level - use placeholder [RISK_LEVEL]",
            "examples": [
                "[RISK_LEVEL]",
                "High",
                "Medium",
                "Low"
            ]
        },
        "implementation": {
            "type": "object",
            "description": "Control implementation using placeholders",
            "properties": {
                "implementationMethod": {
                    "type": "string",
                    "examples": [
                        "[IMPLEMENTATION_METHOD]",
                        "Manual",
                        "Automated",
                        "Semi-Automated",
                        "[CUSTOM_METHOD]"
                    ]
                },
                "responsible": {
                    "type": "string",
                    "examples": [
                        "[RESPONSIBLE_PARTY]",
                        "[CONTROL_OWNER]"
                    ]
                },
                "procedures": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "examples": [
                            "[CONTROL_PROCEDURE]",
                            "[IMPLEMENTATION_STEP]"
                        ]
                    }
                },
                "tools": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "examples": [
                            "[CONTROL_TOOL]",
                            "[SUPPORTING_SYSTEM]"
                        ]
                    }
                },
                "evidence": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "evidenceType": {
                                "type": "string",
                                "examples": [
                                    "[EVIDENCE_TYPE]",
                                    "Documentation",
                                    "Screenshots",
                                    "Reports",
                                    "[CUSTOM_EVIDENCE]"
                                ]
                            },
                            "description": {
                                "type": "string",
                                "examples": [
                                    "[EVIDENCE_DESCRIPTION]",
                                    "[EVIDENCE_PURPOSE]"
                                ]
                            },
                            "location": {
                                "type": "string",
                                "examples": [
                                    "[EVIDENCE_LOCATION]",
                                    "[EVIDENCE_PATH]"
                                ]
                            }
                        }
                    }
                }
            }
        },
        "testing": {
            "type": "object",
            "description": "Control testing using placeholders",
            "properties": {
                "testingMethod": {
                    "type": "string",
                    "examples": [
                        "[TESTING_METHOD]",
                        "Inquiry",
                        "Observation",
                        "Inspection",
                        "Re-performance",
                        "[CUSTOM_METHOD]"
                    ]
                },
                "testingFrequency": {
                    "type": "string",
                    "examples": [
                        "[TESTING_FREQUENCY]",
                        "[TEST_SCHEDULE]"
                    ]
                },
                "sampleSize": {
                    "type": "string",
                    "examples": [
                        "[SAMPLE_SIZE]",
                        "[TEST_SAMPLE]"
                    ]
                },
                "testResults": {
                    "type": "object",
                    "properties": {
                        "status": {
                            "type": "string",
                            "examples": [
                                "[TEST_STATUS]",
                                "Passed",
                                "Failed",
                                "Not Tested",
                                "[CUSTOM_STATUS]"
                            ]
                        },
                        "findings": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": [
                                    "[TEST_FINDING]",
                                    "[AUDIT_OBSERVATION]"
                                ]
                            }
                        },
                        "remediation": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": [
                                    "[REMEDIATION_ACTION]",
                                    "[CORRECTIVE_MEASURE]"
                                ]
                            }
                        }
                    }
                }
            }
        },
        "monitoring": {
            "type": "object",
            "description": "Control monitoring using placeholders",
            "properties": {
                "monitoringMethod": {
                    "type": "string",
                    "examples": [
                        "[MONITORING_METHOD]",
                        "[OVERSIGHT_APPROACH]"
                    ]
                },
                "frequency": {
                    "type": "string",
                    "examples": [
                        "[MONITORING_FREQUENCY]",
                        "[OVERSIGHT_SCHEDULE]"
                    ]
                },
                "alerts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "alertType": {
                                "type": "string",
                                "examples": [
                                    "[ALERT_TYPE]",
                                    "[NOTIFICATION_TYPE]"
                                ]
                            },
                            "condition": {
                                "type": "string",
                                "examples": [
                                    "[ALERT_CONDITION]",
                                    "[TRIGGER_CONDITION]"
                                ]
                            },
                            "recipients": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "examples": [
                                        "[ALERT_RECIPIENT]",
                                        "[NOTIFICATION_TARGET]"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
},
"documentation": {
"type": "object",
