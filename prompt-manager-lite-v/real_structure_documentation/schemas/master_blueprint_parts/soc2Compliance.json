                    ]
                },
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "stepNumber": {
                                "type": "integer",
                                "examples": [
                                    "[STEP_NUMBER]"
                                ]
                            },
                            "stepDescription": {
                                "type": "string",
                                "examples": [
                                    "[STEP_DESCRIPTION]",
                                    "[PROCEDURE_STEP]"
                                ]
                            },
                            "responsible": {
                                "type": "string",
                                "examples": [
                                    "[STEP_RESPONSIBLE]",
                                    "[STEP_OWNER]"
                                ]
                            },
                            "tools": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "examples": [
                                        "[STEP_TOOL]",
                                        "[REQUIRED_SYSTEM]"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "riskAssessments": {
        "type": "array",
        "description": "Risk assessments using placeholders",
        "items": {
            "type": "object",
            "properties": {
                "assessmentName": {
                    "type": "string",
                    "examples": [
                        "[ASSESSMENT_NAME]",
                        "[RISK_ASSESSMENT_TITLE]"
                    ]
                },
                "scope": {
                    "type": "string",
                    "examples": [
                        "[ASSESSMENT_SCOPE]",
                        "[RISK_SCOPE]"
                    ]
                },
                "methodology": {
                    "type": "string",
                    "examples": [
                        "[ASSESSMENT_METHODOLOGY]",
                        "[RISK_FRAMEWORK]"
                    ]
                },
                "risks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "riskId": {
                                "type": "string",
                                "examples": [
                                    "[RISK_ID]",
                                    "[RISK_REFERENCE]"
                                ]
                            },
                            "riskName": {
                                "type": "string",
                                "examples": [
                                    "[RISK_NAME]",
                                    "[RISK_TITLE]"
                                ]
                            },
                            "description": {
                                "type": "string",
                                "examples": [
                                    "[RISK_DESCRIPTION]",
                                    "[RISK_DETAILS]"
                                ]
                            },
                            "likelihood": {
                                "type": "string",
                                "examples": [
                                    "[RISK_LIKELIHOOD]",
                                    "High",
                                    "Medium",
                                    "Low"
                                ]
                            },
                            "impact": {
                                "type": "string",
                                "examples": [
                                    "[RISK_IMPACT]",
                                    "High",
                                    "Medium",
                                    "Low"
                                ]
                            },
                            "riskLevel": {
                                "type": "string",
                                "examples": [
                                    "[RISK_LEVEL]",
                                    "Critical",
