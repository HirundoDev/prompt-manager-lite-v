                                    "Medium",
                                    "Low"
                                ]
                            },
                            "mitigation": {
                                "type": "string",
                                "examples": [
                                    "[RISK_MITIGATION]",
                                    "[MITIGATION_STRATEGY]"
                                ]
                            }
                        }
                    }
                }
            }
        }
    },
    "evidenceRepository": {
        "type": "object",
