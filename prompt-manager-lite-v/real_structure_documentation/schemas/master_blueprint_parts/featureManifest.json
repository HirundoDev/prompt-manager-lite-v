{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-featureManifest.md",
    "title": "Feature Manifest",
    "description": "(Generated by Business Logic Analyst) A catalog of all user-facing features and their current status.",
    "type": "object",
    "properties": {
        "features": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "featureId": { "type": "string" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "status": { "type": "string", "enum": ["Planned", "In Development", "Completed", "Deprecated"] },
                    "userStories": { "type": "array", "items": { "type": "string" } },
                    "owner": { "type": "string" },
                    "stage": { "type": "string", "enum": ["Idea", "Discovery", "MVP", "Beta", "GA", "Sunset"] },
                    "flags": { "type": "array", "items": { "type": "string" } },
                    "deps": { "type": "array", "items": { "type": "string" } },
                    "docs": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["featureId", "description", "status"]
            }
        },
        "relations": {
            "type": "array",
            "items": { 
                "type": "object", 
                "properties": { 
                    "from": { "type": "string" }, 
                    "to": { "type": "string" }, 
                    "type": { "type": "string", "enum": ["blocks", "duplicates", "relates"] } 
                } 
            }
        },
        "flags": {
            "type": "array",
            "items": { 
                "type": "object", 
                "properties": { 
                    "key": { "type": "string" }, 
                    "default": { "type": "boolean" }, 
                    "environments": { "type": "array", "items": { "type": "string" } } 
                } 
            }
        }
    }
}