{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.promptmanager.dev/design-patterns/v3.0.0",
  "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-designPatterns.md",
  "title": "Universal Design Patterns Schema Template",
  "description": "Universal template for documenting design patterns that works across any technology stack, architecture style, or design methodology. This schema provides a structured approach to design pattern documentation using placeholders that can be adapted to software architecture patterns, UI/UX design patterns, system design patterns, or any other design pattern domain. Follows modern software design practices and pattern documentation standards for 2025.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "patternInfo",
    "patterns",
    "categories",
    "relationships"
  ],
  "properties": {
    "patternInfo": {
      "type": "object",
      "description": "Basic design patterns information and metadata",
      "required": [
        "catalogName",
        "version",
        "description",
        "domain"
      ],
      "additionalProperties": false,
      "properties": {
        "catalogName": {
          "type": "string",
          "description": "Pattern catalog name - use placeholder [CATALOG_NAME]",
          "examples": [
            "[CATALOG_NAME]",
            "[PROJECT_NAME] Design Patterns",
            "[SYSTEM_NAME] Pattern Library"
          ]
        },
        "version": {
          "type": "string",
          "description": "Catalog version - use placeholder [CATALOG_VERSION]",
          "examples": [
            "[CATALOG_VERSION]",
            "[MAJOR].[MINOR].[PATCH]"
          ]
        },
        "description": {
          "type": "string",
          "description": "Catalog description - use placeholder [CATALOG_DESCRIPTION]",
          "examples": [
            "[CATALOG_DESCRIPTION]",
            "Design patterns for [PROJECT_PURPOSE]"
          ]
        },
        "domain": {
          "type": "string",
          "description": "Pattern domain - use placeholder [PATTERN_DOMAIN]",
          "examples": [
            "[PATTERN_DOMAIN]",
            "Software Architecture",
            "UI/UX Design",
            "System Design",
            "Data Patterns",
            "[CUSTOM_DOMAIN]"
          ]
        }
      }
    }
  }
}