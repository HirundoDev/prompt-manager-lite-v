{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-dataModelDictionary.md",
    "title": "Data Model Dictionary",
    "description": "(Generated by Data Modeler) A detailed dictionary of all data models, attributes, and relationships.",
    "type": "object",
    "properties": {
        "models": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "modelName": { "type": "string" },
                    "description": { "type": "string" },
                    "tableName": { "type": "string", "description": "Optional physical table/collection name." },
                    "owner": { "type": "string", "description": "Team or function owning the model." },
                    "tags": { "type": "array", "items": { "type": "string" } },
                    "piiLevel": { "type": "string", "enum": ["none", "low", "moderate", "high"], "description": "PII sensitivity classification." },
                    "primaryKey": { "type": "array", "items": { "type": "string" } },
                    "attributes": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": { "type": "string" },
                                "dataType": { "type": "string" },
                                "description": { "type": "string" },
                                "isPrimaryKey": { "type": "boolean" },
                                "isForeignKey": { "type": "boolean" },
                                "isNullable": { "type": "boolean" },
                                "format": { "type": "string" },
                                "length": { "type": "integer" },
                                "enum": { "type": "array", "items": { "type": "string" } },
                                "default": {},
                                "example": {},
                                "validation": { "type": "string", "description": "Optional validation expression or rule." },
                                "classification": { "type": "string", "enum": ["pii", "sensitive", "public", "internal"] }
                            }
                        }
                    },
                    "relationships": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "relatedModel": { "type": "string" },
                                "type": { "type": "string", "enum": ["One-to-One", "One-to-Many", "Many-to-Many"] },
                                "foreignKey": { "type": "string" },
                                "sourceAttribute": { "type": "string", "description": "Attribute on this model participating in the relationship." },
                                "targetAttribute": { "type": "string", "description": "Attribute on related model participating in the relationship." },
                                "onDelete": { "type": "string", "enum": ["restrict", "cascade", "set-null", "no-action"] },
                                "onUpdate": { "type": "string", "enum": ["restrict", "cascade", "set-null", "no-action"] },
                                "inverseName": { "type": "string", "description": "Optional inverse relationship name." },
                                "description": { "type": "string" }
                            }
                        }
                    }
                }
            }
        }
    }
}