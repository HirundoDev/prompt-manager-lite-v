{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-bugLifecycle.md",
    "title": "Bug Lifecycle Management",
    "description": "Tracks the lifecycle of all reported bugs from discovery to resolution.",
    "type": "array",
    "items": {
        "type": "object",
        "description": "A reference to a bug artifact. It acts as a pointer in the manifest to the actual bug report file.",
        "properties": {
            "bugId": {
                "type": "string",
                "description": "Unique identifier for the bug (e.g., 'BUG-001')."
            },
            "status": {
                "type": "string",
                "description": "The current high-level status of the bug.",
                "enum": ["Reported", "In Progress", "Resolved", "Closed"]
            },
            "summary": {
                "type": "string",
                "description": "A brief, one-line summary of the bug's nature."
            },
            "path": {
                "type": "string",
                "description": "The relative file path to the bug's detailed markdown report from the `core-system` root."
            },
            "priority": {
                "type": "string",
                "description": "Priority level for SLA tracking.",
                "enum": ["P0", "P1", "P2", "P3"]
            },
            "labels": { "type": "array", "items": { "type": "string" }, "description": "Normalized taxonomy labels (e.g., 'severity:P1', 'area:frontend')." },
            "owner": { "type": "string", "description": "Current responsible team or user." },
            "createdAt": { "type": "string", "format": "date-time" },
            "updatedAt": { "type": "string", "format": "date-time" },
            "history": {
                "type": "array",
                "description": "State transition history for auditability.",
                "items": {
                    "type": "object",
                    "properties": {
                        "from": { "type": "string" },
                        "to": { "type": "string" },
                        "at": { "type": "string", "format": "date-time" },
                        "by": { "type": "string" },
                        "notes": { "type": "string" }
                    },
                    "required": ["to", "at"]
                }
            },
            "relatedFeatureId": { "type": "string", "description": "If applicable, the related feature or epic identifier." },
            "duplicateOf": { "type": "string", "description": "If marked duplicate, the canonical bug id." }
        },
        "required": ["bugId", "status", "path", "summary"]
    }
}