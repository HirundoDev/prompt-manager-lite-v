{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Playbook: prompt_playbooks/schemas_playbooks/playbook_schema-documentationManifest.md",
    "title": "Documentation Manifest",
    "description": "(Generated by Documentation Architect) A master manifest of all documentation artifacts generated for the project.",
    "type": "object",
    "properties": {
        "documents": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "title": { "type": "string" },
                    "path": { "type": "string" },
                    "description": { "type": "string" },
                    "ownerAgent": { "type": "string" },
                    "status": { "type": "string", "enum": ["draft", "review", "approved"] },
                    "lastUpdated": { "type": "string" }
                },
                "required": ["title", "path", "ownerAgent"]
            }
        },
        "dependencies": {
            "type": "array",
            "items": { "type": "object", "properties": { "fromDoc": { "type": "string" }, "toDoc": { "type": "string" }, "relation": { "type": "string" } } }
        },
        "reviewCycles": {
            "type": "object",
            "properties": { "frequency": { "type": "string" }, "reviewers": { "type": "array", "items": { "type": "string" } } }
        },
        "qualityChecks": {
            "type": "array",
            "items": { "type": "object", "properties": { "id": { "type": "string" }, "description": { "type": "string" }, "automated": { "type": "boolean" } } }
        }
    }
}