{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Feature Manifest",
    "description": "(Generated by Business Logic Analyst) A catalog of all user-facing features and their current status.",
    "type": "object",
    "properties": {
        "features": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "featureId": { "type": "string" },
                    "description": { "type": "string" },
                    "status": { "type": "string", "enum": ["Planned", "In Development", "Completed", "Deprecated"] },
                    "userStories": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["featureId", "description", "status"]
            }
        }
    }
}